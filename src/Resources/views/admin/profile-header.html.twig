<div class="admin-header">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-3">
                <form class="no-ajaxify" data-js="upload={submit:submitForm}" enctype="multipart/form-data" method="post" action=""
                    accept-charset="UTF-8">
                    <figure>
                        <img class="thumbnail" width="100%" height="100%" src="{{ getUrl('cdn/swagg/img/default-90x90.png') }}" alt="">
                        <button onclick="$('#thumbnail_upload').trigger('click')" title="Modifier photo de profil" class="btn-photo btn btn-primary"
                            type="button">
                            <i class="fa fa-camera"></i>
                        </button>
                        <input data-js="upload={change:uploadProfilePhoto}" type="file" id="thumbnail_upload" name="file" class="hidden" />
                    </figure>
                </form>
            </div>
            <div class="col-xs-12 col-md-9">
                <h1>{{ app.user.username }}</h1>
                <p>{{ app.user.email }}</p>
            </div>
        </div>
    </div>
</div>
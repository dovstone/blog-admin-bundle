{{ form_start(form) }}
    
    <div class="row">
        <div class="col-xs-12">
            <div class="field">
                <input type="password" name="info[current_password]" autocomplete="off" required />
                <label>Mot de passe actuel</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div class="field">
                <input type="text" value="{{ form.vars.value.username }}">
                <label>Nom d'Utilisateur</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="field">
                <input type="text" value="{{ form.vars.value.lastname }}">
                <label>Nom</label>
            </div>
        </div>
        <div class="col-md-8">
            <div class="field">
                <input type="text" value="{{ form.vars.value.firstname }}">
                <label>Prénoms</label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="field">
                <input type="number" value="{{ form.vars.value.contact }}">
                <label>Téléphone</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="field">
                <input type="email" value="{{ form.vars.value.email }}">
                <label>Email</label>
            </div>
        </div>
    </div>

    <div class="row hidden">
        <div class="col-xs-12">
            <button type="submit">Mettre à jour</button>
        </div>
    </div>
    
{{ form_end(form, {'render_rest':false}) }}
